
@model List<Canva.Models.DesignModel>
@{
    ViewBag.Title = "Design";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Designs</h2>
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">List of Designs</div>
            <div class="panel-body">
                <a href="@Url.Action("EditDesign","Admin")" class="btn btn-link">Add New Design</a>
                <table class="table table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Serial No.</th>
                            <th>Design</th>
                            <th>Category</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><img src="@Url.Content(item.Url)" style="width:100px;height:100px;" /></td>
                                <td>@item.Category</td>
                                <td><a href="@Url.Action("EditDesign","Admin",new { Id=item.Id})" class="btn btn-primary">Edit</a>  <button class="btn btn-danger" onclick="DeleteCategory('@item.Id')" type="button">Delete</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        function DeleteCategory(id) {
            var result = confirm("All User Designs related to this Design will be deleted. Do you want to proceed?");
            if (result) {
                window.location.href = "/Admin/DeleteDesign?Id=" + id;
            }
        }
    </script>
}


