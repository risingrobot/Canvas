@model Canva.Models.MainPageModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Index</title>
    <!--CSS styles-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <!--Custom Styles-->
    <style>
        body {
            background-image: url('/Images/background_image.png');
            background-repeat: repeat;
            background-size: cover;
        }

        .navigation li {
            color: white;
            display: inline-block;
            padding: 10px;
        }

        .header-form {
        }

        input.text-box {
            border-radius: 5px;
            font-size: 14px;
            border: 1px solid #919191;
            margin: 1px;
            background: rgba(255,255,255,.1);
            padding: 9px;
            color: #fff;
            outline: none;
            transition: background-color .2s ease;
            /* float: left; */
            font-family: inherit;
        }

        button.login_btn {
            background: #ff4200;
            margin: 1px 0 1px 10px;
            padding: 9px 18px;
            border-radius: 5px;
            color: white;
            border: 1px solid #99c432;
            border-color:#ff4200;
        }

        img.logo_image {
            width: 87px;
            display: block;
            margin: 40px 0px 12px 417px;
        }

        .signup-form {
            text-align: center;
        }

        input.in {
            padding: 16px 80px 15px 20px;
            /* border: 1px solid; */
            border-radius: 1px;
            border: 1px solid #919191;
            font-family: inherit;
        }

        h1.form_title {
            font-size: 20px;
        }

        button.signUp {
            background: #ff4200;
            border-radius: 5px;
            color: white;
            border: 1px solid #919191;
            padding: 14px 103px 14px 123px;
            margin: 14px;
            border-color:#ff4200;
        }

        .box {
            /*background-color: white;*/
            background-image: url('../../Images/signup_bg.png');
            width: 332px;
            margin: -70px 0px 0px 300px;
            padding: 66px 0px 20px 0px;
            border-radius: 10px;
            background-repeat: no-repeat;
            background-size: cover;
            margin-top: 106px;
        }

        .Panel {
            float: left;
            padding: 0px 180px 0px 0px;
        }

        .forgot-btn {
            padding: 10px 18px;
            margin-left: 10px;
            background-color: rgba(0,0,0,.4);
            color: white;
            border-radius: 5px;
            transition: background-color .2s ease;
            outline-width: 0;
            cursor: pointer;
        }

        .logo {
            float: right;
            margin: -355px;
            padding: 0px;
            width: 45%;
            color: #fff;
            padding-top: 60px;
        }

        p.logo-1 {
            font-size: 22px;
            margin-top: 0;
            font-weight: 600;
        }

        p.logo-2 {
            font-size: 16px;
            margin-top: 15px;
        }

        p.logo-3 {
            font-size: 16px;
            margin-top: 30px;
        }

        cite.logo-cite {
            display: block;
            opacity: .5;
            font-size: 14px;
        }

        select {
            padding: 16px 104px 15px 20px;
            /* border: 1px solid; */
            border-radius: 1px;
            border: 1px solid #919191;
            font-family: inherit;
        }
        .btn-link {
            font-weight: normal;
            color: #fff;
            cursor: pointer;
            border-radius: 0;
        }
    </style>
</head>
<body>
    <div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="navigation">
                        <ul>
                            @*<li>Learn</li>
                                <li>About us</li>
                                <li>Contact us</li>
                                <li>Features</li>*@
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="header-form">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                        {
                            @Html.TextBoxFor(x => x.loginModel.Email, new { placeholder = "Username / Email", @class = "login-input" })
                            @Html.PasswordFor(x => x.loginModel.Password, new { placeholder = "password", @class = "login-input" })

                            <button class="login_btn">login</button>
                            @*<span class="forgot-btn">forgot pasword?</span>*@
                            <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal">forgot pasword?</button>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xm-12">
                <div class="Panel">
                    @*<img class="logo_image" src="~/Images/canva_logo.png" />"*@
                    <div class="box">
                        <div class="signup-form">
                            <h1 class="form_title">New to Canva? Sign up!</h1>
                            <div class="createNewAccount">
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                                {
                                    <span>@Html.ValidationSummary()</span>
                                    <span>@Html.HiddenFor(x => x.registerModel.Id)</span>
                                    <div>@Html.TextBoxFor(x => x.registerModel.FullName, new { placeholder = "Full name:", @class = "in" })</div>
                                    <div>@Html.TextBoxFor(x => x.registerModel.EmailAddress, new { placeholder = "Email Address:", @class = "in" })</div>
                                    <div>@Html.PasswordFor(x => x.registerModel.Password, new { placeholder = "Password:", @class = "in" })</div>
                                    <div>@Html.PasswordFor(x => x.registerModel.ConfirmPassword, new { placeholder = "ConfirmPassword:", @class = "in" })</div>
                                    <div>@Html.Raw(ViewBag.professionDropdown)</div>
                                    <button type="submit" class="signUp">Sign up</button>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="logo">
                        <p class="logo-1">Simply great design for you and your team</p>

                        <p class="logo-2">Get your team on brand. Unleash your creativity.</p>

                        <p class="logo-3">
                            <q>We can edit designs across the entire team</q>
                            <cite class="logo-cite">-Yelp</cite>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Forget Password</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" id="txt_Email" class="form-control" />
                    </div>
                    <button type="button" onclick="ForgetPassword(this)" class="btn btn-danger">Verify Email</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        function ForgetPassword(elem) {
            $(elem).html('Sending Email....');
            var text = $('#txt_Email').val();
            $.ajax({
                url: '/Account/ForgetPassword?Email=' + text,
                method: 'GET',
                success: function (response) {
                    $('#txt_Email').val('');
                    $(elem).html('Verify Email');
                    if (response === true) {
                        alert('Please go to your Email Address and check your password.')
                    }
                },
                error: function (err) {
                    $('#txt_Email').val('');
                    $(elem).html('Verify Email');
                    alert('something went wrong please try again');
                }
            })
        }
    </script>
</body>
</html>
